doctype html
block vars
  -var section = null;

mixin liForSection(section, expected)
  if section === expected
    li.active
      block
  else
    li
      block

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = 'weak.io'
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lusitana:400,700')
      link(rel='stylesheet', href='/css/bootstrap.min.css')
      link(rel='stylesheet', href='/css/normalize.css')
      link(rel='stylesheet', href='/css/main.css')
  body
    .container.container-content
      .row
        .col-12.col-lg-12
          ul.nav.nav-pills.topnav
            li
              img.logo(src='/img/logo.png')
            +liForSection(section, 'home')
              a(href='/') Home
            +liForSection(section, 'projects')
              a(href='/projects.html') Projects
            +liForSection(section, 'about')
              a(href='/about.html') About
      .row
        .col-12.col-lg-12
          div#content
            div.content-wrap
              block content
    .container
      footer
        div.copy-ctr
          .copy
            p &copy; #{ new Date().getFullYear() } weak.io

    script(type='text/javascript',src='/js/jquery.min.js')
    script(type='text/javascript',src='/js/bootstrap.min.js')
