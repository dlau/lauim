doctype html
block vars
  -var section = null;

mixin liForSection(expected, url)
  li
    if section === expected
      = expected
    else
      a(href=url)
        = expected

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = 'lau.im'
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/bootstrap.min.css')
      link(rel='stylesheet', href='/css/normalize.css')
      link(rel='stylesheet', href='/css/highlight.min.css')
      link(rel='stylesheet', href='/css/main.css')
  body
    .container.container-content
      .row
        .col-12.col-lg-12
          ul.list-inline.topnav
            +liForSection('Home', '/')
            //-Temporarily disable
            //-+liForSection('Projects', '/projects.html')
            +liForSection('Contact', '/contact.html')
      .row
        .col-12.col-lg-12
          div#content
            div.content-wrap
              block content
    .container
      footer
        div.copy-ctr
          .copy
            p &copy; #{ new Date().getFullYear() }

    script(type='text/javascript',src='/js/jquery.min.js')
    script(type='text/javascript',src='/js/highlight.min.js')
    script.
      hljs.initHighlightingOnLoad();
